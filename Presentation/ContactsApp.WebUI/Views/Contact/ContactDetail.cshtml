@model Contact

@if (Model is not null)
{
    <div>
        <form id="update-contact-form" action="/contact/update-contact">
            @Html.AntiForgeryToken()
            <input type="hidden" class="form-control" name="Id" value="@Model?.Id">
            <div class="form-group">
                <label for="FirstName">Ad</label>
                <input type="text" class="form-control" name="FirstName" id="FirstName" placeholder="Ad" value="@Model?.FirstName" data-validation="true">
                <small class="form-text text-muted">Kaydetmek istediğiniz kişinin adını giriniz.</small>
                <div class="err-valid-msg text-danger text-small d-none" data-message="Girdiğiniz adı kontrol ediniz."></div>
            </div>
            <div class="form-group">
                <label for="LastName">Soyad</label>
                <input type="text" class="form-control" name="LastName" id="LastName" placeholder="Soyad" value="@Model?.LastName" data-validation="true">
                <small class="form-text text-muted">Kaydetmek istediğiniz kişinin soyadını giriniz.</small>
                <div class="err-valid-msg text-danger text-small d-none" data-message="Girdiğiniz soyadını kontrol ediniz."></div>
            </div>
            <div class="form-group">
                <label for="LastName">Şirket</label>
                <input type="text" class="form-control" name="CompanyName" id="Company" placeholder="Şirket" value="@Model?.CompanyName">
                <small class="form-text text-muted">Kaydetmek istediğiniz çalıştığı şirket bilgisini giriniz.</small>
                <div class="err-valid-msg text-danger text-small d-none" data-message="Girdiğiniz şirket adını kontrol ediniz."></div>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
        </form>
    </div>
}
@section Scripts {
    <script src="~/js/contact.js" asp-append-version="true"></script>
    <script src="~/js/validation.js" asp-append-version="true"></script>
    <script src="~/js/vanillatextmask.js"></script>
}